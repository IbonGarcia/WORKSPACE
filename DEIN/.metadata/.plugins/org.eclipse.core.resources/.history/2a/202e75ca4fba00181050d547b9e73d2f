		this.getContentPane().add(h);
		this.getContentPane().add(i);
		
		this.getContentPane().add(etiqueta);
		this.setTitle("Ejercicio 3");
		this.setSize(300,160);
		this.setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		this.setVisible(true);
		tratarEventos();				
	}
	
